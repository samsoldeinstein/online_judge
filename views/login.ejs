<!-- header using ejs -->
<%-include('headheader');-%>
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/css/headertop.css">
    <%-include('footheader');-%>    
    <!-- container for the form -->
    <div class="contain">
        <!-- form -->
        <form method='post' action='/login'>
            <div class="card">
                <div class="card-header">
                    <h4>Login</h4>
                </div>
                <div class="card-body">
                    <!-- username -->
                    <div class="form-group row">
                        <div class="col-lg-3">
                            <label for="user">Username</label>
                        </div>
                        <div class="col-lg-8">
                            <input type='text' id="user" class="form-control" name='username' placeholder='Username' required />
                        </div>

                    </div>
                    <!-- password -->
                    <div class="form-group row">
                        <div class="col-lg-3">
                            <label for="password">Password</label>
                        </div>
                        <div class="col-lg-8">
                            <input type='password' id="password" class="form-control" name='password' placeholder='Password' required />
                        </div>

                    </div>
                    <div class="cont">
                        <button class="btn btn-success self-align-flex-end" name='submit'>Submit</button>
                        <p class="text-muted">
                            Don't have an account?<a class="text-muted" href='/register'>Register</a>
                        </p>
                    </div>



                </div>

            </div>
            <!-- ejs message if invalid credentials -->            
            <%if(message)%>
                <p>
                    <%=message%>
                </p>

        </form>
    </div>


    <%-include('footer');-%>